pipeline {
    agent any

    tools {
        nodejs '22.8.0'
    }

    stages {
        stage('print versions') {
            steps {
                sh 'npm --version'
                sh 'node --version'
            }
        }

        stage('Install') {
            steps {
                sh 'npm install'
            }
        }

        stage('Build') {
            steps {
                sh 'npm run build'
            }
        }

        stage('codedeploy') {
            steps {
                script {
                    try {
                        step([$class: 'AWSCodeDeployPublisher', 
                            applicationName: 'nodejs-application', 
                            deploymentGroupAppspec: false, 
                            deploymentGroupName: 'nodejs-application-DG', 
                            excludes: '', 
                            iamRoleArn: 'YOUR_IAM_ROLE_ARN', 
                            includes: 'dist/', 
                            proxyHost: '', 
                            proxyPort: 0, 
                            region: 'ap-south-1'])
                    } catch (Exception e) {
                        echo "Error during CodeDeploy: ${e}"
                    }
                }
            }
        }
    }
}
